<%- include("./partials/header.ejs") %>
<h1>Compose</h1>
<form action="/compose" method="post">
  <label for="floatingInputValue">Title</label>
  <div class="form-group">
    <form class="form-floating">
      <input
        name="postTitle"
        type="text"
        class="form-control"
        id="floatingInputValue"
      />
      <label for="floatingInputValue">Post</label>
    </form>
    <div>
      <div class="form-floating">
        <textarea
          name="postBody"
          class="form-control"
          id="floatingTextarea"
        ></textarea>
      </div>
    </div>
    <button style="margin-top: 1rem" type="submit" class="btn btn-primary">
      Publish
    </button>
  </div>
</form>

<%- include("./partials/footer.ejs") %>
